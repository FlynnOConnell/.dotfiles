#!/bin/bash
#
#
export REPOS=~/repos/
export DOTS=$REPOS/.dotfiles/


alias xxx='cd $DOTS'
alias mount='sudo mount -t cifs //v-storage2.rockefeller.edu/v-data2 /mnt/vdata2 -o credentials=/root/.smbcredentials_vgpu &> /dev/null'

echo "Sourcing aliases..."

alias dark='gsettings set org.gnome.desktop.interface gtk-theme Adwaita-dark \
&& gsettings set org.gnome.desktop.interface color-scheme prefer-dark'

alias fd='fdfind'

alias vgpu='remmina ~/.local/share/remmina/rockefellernt_rdp_v-gpu2_129-85-3-29.remmina &'
alias rdp='remmina ~/.local/share/remmina/rockefellernt_rdp_v-gpu2_129-85-3-29.remmina &'
alias jupyterremote='jupyter notebook --no-browser --port=8888'
alias auto="nvim ~/.config/autostart"

alias copy='xclip -sel clip'
alias key='cat ~/repos/.dotfiles/scripts/shortcuts.txt'
alias keys='cat ~/repos/.dotfiles/scripts/shortcuts.txt'
alias path='tr ":" "\n" <<< "$PATH"'
alias vpn='sudo openconnect --juniper --no-dtls vpn.rockefeller.edu --user=foconnell'
alias vpn2='echo -e 'VWQ3prv/!chu2ech8dcu' | sudo openconnect --juniper --no-dtls vpn.rockefeller.edu --user=foconnell --passwd-on-stdin'
alias rmf='rm -rf'
alias logout='sudo service gdm restart'
alias cppw='xsel --clipboard < ~/.password.txt'
alias goicon='nvim ~/.icons/'

alias VIM="nvim"
alias PERSONAL=$XDG_CONFIG_HOME/personal
alias sudoedit='function _sudoedit(){sudo -e "$1";};_sudoedit'

# - AwesomeWM ----
alias goaw="nvim ~/.config/awesome/"
alias goat="nvim ~/.config/awesome/theme/theme.lua"
alias cdaw="cd ~/.config/awesome/"

# - Lists ----
alias lsa='ls -la'

# - Navigation -
