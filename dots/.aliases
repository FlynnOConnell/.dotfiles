#!/bin/bash
#
echo "Sourcing aliases..."
#
export REPOS=~/repos/
export DOTS=$REPOS/.dotfiles/

alias VIM="nvim"
alias mysudo='sudo -E env "PATH=$PATH"'
alias mm="~/micromamba"

# - Remote ----
alias mount2='sudo mount -t cifs //v-storage2.rockefeller.edu/v-data2 /mnt/vdata2 -o credentials=/root/.smbcredentials_vgpu &> /dev/null'
alias mount4='sudo mount -t cifs //v-storage2.rockefeller.edu/v-data4 /mnt/vdata4 credentials=/root/.smbcredentials_vgpu &> /dev/null'
alias go4='nvim /v-data4/foconnell/code/'
alias go2='nvim /data2/fpo/'
alias cd4='cd /v-data4/foconnell/code/'
alias cd2='cd /data2/fpo/'

alias vgpu='remmina ~/.local/share/remmina/rockefellernt_rdp_v-gpu2_129-85-3-29.remmina &'
alias rdp='remmina ~/.local/share/remmina/rockefellernt_rdp_v-gpu2_129-85-3-29.remmina &'

# - Copy ----
alias cppw='xsel --clipboard < ~/.password.txt'

# - Navigation -
alias lsa='ls -la'
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias ~="cd ~"
alias cdaw="cd ~/.config/awesome"
alias cdr="cd ~/repos"
alias cdd="cd ~/repos/.dotfiles"
alias cdow="cd ~/Downloads/"
alias cdot="cd ~/repos/.dotfiles/dots"
alias cdi3="cd ~/.config/i3/config"
alias cdt="cd ~/.config/tmux/tmux.conf"
alias cdn="cd ~/.config/nvim/"
alias cds="cd ~/repos/.dotfiles/scripts"
alias cdm="cd /mnt/vdata4/foconnell"
alias cdmc="cd /mnt/vdata4/foconnell/code"
alias cdmd="cd /mnt/vdata4/foconnell/data"

# - Nvim To File ----
alias goa="nvim ~/.aliases"
alias gow="nvim ~/.config/nitrogen"
alias goz="nvim ~/.zshrc"
alias goe="nvim ~/.zshenv"
alias gov="nvim ~/.vimrc"
alias goi='nvim ~/.ideavimrc'
alias got="nvim ~/repos/.dotfiles/dots/.config/tmux/tmux.conf"
alias gos="nvim ~/repos/.dotfiles/scripts/install_dev"
alias gok="nvim ~/repos/.dotfiles/dots/.config/kitty/kitty.conf"
alias god="nvim ~/repos/.dotfiles/"
alias goi3="nvim ~/.config/i3/config"
alias gon="nvim ~/.config/nvim/"
alias goicon='nvim ~/.icons/'
alias goaw="nvim ~/.config/awesome/"

# - Source --------
alias sz="source ~/.zshrc"
alias st="tmux source ~/.config/tmux/tmux.conf"

# - Git ---------
alias gs="git status"
alias ga="git add"
alias gb="git branch"
alias gc="git commit"
alias gd="git diff"

# - Tools ---------
alias hf="history | fzf -e"
alias lg="lazygit"
alias fd='fdfind'

# - Helpers ---------
alias key='cat ~/repos/.dotfiles/scripts/shortcuts.txt'
alias keys='cat ~/repos/.dotfiles/scripts/shortcuts.txt'
alias path='tr ":" "\n" <<< "$PATH"'
alias logout='sudo service gdm restart'

# - Python / Conda
alias mm='micromamba'

navialias() {
    navi --query ":: $1" --best-match
}

alias ng="navialias git"
alias n=nvim -c 'Telescope oldfiles'


alias e='fzf -m --bind ctrl-a:select-all,ctrl-d:deselect-all,ctrl-t:toggle-all --print0 --preview "bat --theme Dracula --color=always {}" | xargs -0 -o $EDITOR'
