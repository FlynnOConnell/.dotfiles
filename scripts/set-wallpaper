#!/bin/bash

echo "Setting wallpaper"

WALLPAPER="$HOME/wallpapers/lost-in-space.png"
WALLPAPER2="$HOME/wallpapers/color-bg.png"

if command -v feh >/dev/null; then
    feh --bg-scale --no-fehbg --output DP-2 "$WALLPAPER" --output DP-4 "$WALLPAPER2"
elif command -v nitrogen >/dev/null; then
    nitrogen --set-zoom-fill --save --head-0 "$WALLPAPER"
    nitrogen --set-zoom-fill --save --head-1 "$WALLPAPER2"
else
    echo "No suitable wallpaper setting tool found." >&2
    exit 1
fi

