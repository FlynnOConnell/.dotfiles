""" Map leader to space ---------------------
let mapleader=" "

""" Plugins  --------------------------------
set surround
set commentary
set NERDTree
set highlightedyank
set quickscope

""" Handlers --------------------------------
sethandler <C-C> v-i:ide n:vim
sethandler <C-V> v-i:ide n:vim

""" Plugin settings -------------------------
let g:qs_highlight_on_keys = ['f', 'F', 't', 'T']

""" Common settings -------------------------
set showmode
set so=5
set incsearch
set nu
set relativenumber

""" Idea specific settings ------------------
set ideajoin
set ideastatusicon=gray

""" Mappings --------------------------------
map <leader>z <Action>(ToggleDistractionFreeMode)
nnoremap \ :NERDTree<CR>

map <leader>J <Action>(MoveLineDown)
map <leader>K <Action>(MoveLineUp)
map <leader>j :action GotoNextError<CR>
map <leader>k :action GotoPreviousError<CR>

map J mzJ`z
map j jzz
map k kzz

map <C-d> <C-d>zz
map <C-u> <C-u>zz
map n nzzzv
map N Nzzzv

" method down/up"
nnoremap [[ :action MethodUp<CR>
nnoremap ]] :action MethodDown<CR>

" -- tabs
map <C-1> 1gt
map <C-2> 2gt
map <C-3> 3gt
map <C-4> 4gt
map <C-5> 5gt
map <C-n> <Action>(NextTab)
map <C-p> <Action>(PreviousTab)
map <leader>q <Action>(CloseContent)

map gh <Action>(ShowErrorDescription)
map gi <Action>(GotoImplementation)
map gd <Action>(GotoDeclaration)

" open ~/.ideavimrc"
map <leader>ev :e ~/.ideavimrc<CR>

" rename "
map gr <Action>(RenameElement)

map <leader>p ["_dP]
map <leader>y ["+y]
map <leader>Y ["+Y]

map <leader>d ["_d]
imap kj <Esc>

""" Window / Split Management ---------------
noremap <C-L> <C-W><C-L>
noremap <C-H> <C-W><C-H>
map <leader>\ <Action>(SplitVertically)
map <leader>- <Action>(SplitHorizontally)

nnoremap <leader>wp :action JumpToLastWindow<CR>
nnoremap <leader>wn :action JumpToNextWindow<CR>
nnoremap <leader>h :waction HideAllWindows<CR>

"dock pinned"
map <leader>wd <Action>(DockPinned)
map <leader>wf <Action>(Float)
map <leader>ww <Action>(Window)

"Dock Pinned: <C-d>
"Float: <C-f>
"Window: <C-w>

""" Run/Debug --------------------------------
map ,r <Action>(Run)
map ,R <Action>(Rerun)

map ,d <Action>(Debug)
map ,c <Action>(Stop)
map ,b <Action>(ToggleLineBreakpoint)
map ,n <Action>(MuteBreakpoints)
" show all breakpoints"
map ,a <Action>(ViewBreakpoints)
map ,s <Action>(StepOver)
map ,i <Action>(StepInto)
map ,o <Action>(StepOut)
map ,u <Action>(RunToCursor)
map ,p <Action>(Resume)

map <S-Space> <Action>(GotoNextError)
